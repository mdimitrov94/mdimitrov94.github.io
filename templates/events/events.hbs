{{> header}}
<div class="background">
    {{#if data.length}}
    <a href="#/create" class="event-creator">Create new event</a>
    <div class="events">
        {{#each data}}
        <a href="#/details/{{_id}}" class="display-event">
            <h2>{{eventname}}</h2>
            <img src="{{imgURL}}" alt="">
            <h2>Organizer: {{organizer}}</h2>
        </a>
        {{/each}}
    </div>

    {{else}}
    <div class="notlogged">
        <h1>There are currently no events. Create one from <a href="#/create">here.</a></h1>

        <span>&copy Flex Gym 2020</span>
    </div>
    {{/if}}
</div>
{{> footer}}
