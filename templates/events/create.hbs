{{> header}}
<form action="#/create" method="post" class="form">
    <div class="login">
        <h1>Create event</h1>
        <div class="group">
            <input type="text" id="eventname" name="eventname" placeholder="Name of the event" required="">
            <label for="eventname">Name of the event</label>
        </div>
        <div class="group">
            <input type="text" id="date" name="date" placeholder="Date" required="">
            <label for="date">Date</label>
        </div>
        <div class="group">
            <input type="text" id="description" name="description" placeholder="Description" required="">
            <label for="description">Description</label>
        </div>
        <div class="group">
            <input type="text" id="imgURL" name="imgURL" placeholder="Image" required="">
            <label for="imgURL">Image</label>
        </div>
        <button type="submit">Post event</button>
        <span>&copy Flex Gym 2020</span>
    </div>

</form>
{{> footer}}